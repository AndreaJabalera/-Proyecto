# Lista de puntuaciones de los 5 estudiantes
puntuaciones = [85, 92, 78, 88, 95]

# Función para calcular el promedio de puntuaciones
def calcular_promedio_puntuaciones(puntuaciones):
    total_puntuaciones = 0
    for puntuacion in puntuaciones:
        total_puntuaciones += puntuacion
    promedio = total_puntuaciones / len(puntuaciones)
    return promedio

# Función para calcular la puntuación máxima
def calcular_puntuacion_maxima(puntuaciones):
    puntuacion_maxima = puntuaciones[0]
    for puntuacion in puntuaciones:
        if puntuacion > puntuacion_maxima:
            puntuacion_maxima = puntuacion
    return puntuacion_maxima

# Función para calcular el total de las puntuaciones
def calcular_total_puntuaciones(puntuaciones):
    total_puntuaciones = sum(puntuaciones)
    return total_puntuaciones

# Imprimir los resultados
promedio = calcular_promedio_puntuaciones(puntuaciones)
puntuacion_maxima = calcular_puntuacion_maxima(puntuaciones)
total_puntuaciones = calcular_total_puntuaciones(puntuaciones)

print("Promedio de puntuaciones:", promedio)
print("Puntuación máxima:", puntuacion_maxima)
print("Total de puntuaciones:", total_puntuaciones)
Promedio de puntuaciones: 87.6
Puntuación máxima: 95
Total de puntuaciones: 438
